[Version]
signature="$CHICAGO$"

[DefaultInstall]
CopyFiles = Scheme.Cur
AddReg    = Scheme.Reg

[DestinationDirs]
Scheme.Cur = 10,"%CUR_DIR%"

[Scheme.Reg]
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,%10%\%CUR_DIR%\%help%,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,%10%\%CUR_DIR%\%cross%,%10%\%CUR_DIR%\%text%,%10%\%CUR_DIR%\%handwrt%,%10%\%CUR_DIR%\%unavailiable%,%10%\%CUR_DIR%\%vert%,%10%\%CUR_DIR%\%horz%,%10%\%CUR_DIR%\%dgn1%,%10%\%CUR_DIR%\%dgn2%,%10%\%CUR_DIR%\%move%,%10%\%CUR_DIR%\%alternate%,%10%\%CUR_DIR%\%link%,%10%\%CUR_DIR%\%pin%,%10%\%CUR_DIR%\%person%"

[Scheme.Cur]
-Normal Select.cur
-Help Select.cur
-Working In Background.ani
-Busy.ani
-Precision Select.cur
-Text Select.cur
-Handwriting.cur
-Unavailable.cur
-Vertical Resize.cur
-Horizontal Resize.cur
-Diagonal Resize 1.cur
-Diagonal Resize 2.cur
-Move.cur
-Alternate Select.cur
-Link Select.cur
-Location Select.cur
-Person Select.cur

[Strings]
CUR_DIR       = "Windows\Cursors\ketro v2 b&w light"
SCHEME_NAME   = "ketro v2 b&w light"
pointer       = "-Normal Select.cur"
help          = "-Help Select.cur"
work          = "-Working In Background.ani"
busy          = "-Busy.ani"
cross         = "-Precision Select.cur"
text          = "-Text Select.cur"
handwrt       = "-Handwriting.cur"
unavailiable  = "-Unavailable.cur"
vert          = "-Vertical Resize.cur"
horz          = "-Horizontal Resize.cur"
dgn1          = "-Diagonal Resize 1.cur"
dgn2          = "-Diagonal Resize 2.cur"
move          = "-Move.cur"
alternate     = "-Alternate Select.cur"
link          = "-Link Select.cur"
pin           = "-Location Select.cur"
person        = "-Person Select.cur"